<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Publisher</th>
      <th>Kind</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.publisher %></td>
        <td><%= book.category.kind %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <div id="comment<%=book.id%>" class="collapse<% book.id %>">
              <%= simple_form_for [book, Comment.new]  do |b| %>
                <div class="field">
                  <%= b.text_area :body, class: "form-control" %>
                </div>
                <br>
                <%= b.submit "Add Comment", class: "btn btn-primary" %>
              <% end %>
            </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
