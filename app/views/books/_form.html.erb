          <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

          <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
            <%= f.file_field :avatar %>
        </div>
      </div>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name , class:"form-control"%>
      </div>

      <div class="field">
        <%= f.label :publisher %>
        <%= f.text_field :publisher, class:"form-control" %>
      </div>

      <div class="field">
        <%= f.label :category %>
        <%= f.select :category_id, @categories %>
      </div>

      <div class="field">
        <%= f.label :author %>
        <%= f.select :author_id, @authors %>
      </div>

      <div class="actions">
        <%= f.submit class:"btn btn-primary btn-block" %>
      </div>
    <% end %>
